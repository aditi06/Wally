<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BudgetActivity"
    android:background="@drawable/gradient_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:fontFamily="arial"
        android:text="BUDGET"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="58dp"
        android:fontFamily="arial"
        android:gravity="center_horizontal|center_vertical"
        android:text="Spending History"
        android:textColor="@color/white"
        android:textSize="35sp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="270dp"
        android:layout_gravity="center"
        android:background="@drawable/spending_report"
        tools:ignore="ContentDescription" />
    <Button
        android:id="@+id/revSpend"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:backgroundTint="#9AE677"
        android:layout_gravity="center_horizontal"
        android:text="Review Budget"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/editSpend"
        tools:targetApi="lollipop"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/editSpend"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:backgroundTint="#9AE677"
        android:text="Change Budget"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/revSpend"
        app:layout_constraintTop_toBottomOf="@+id/historySpend"
        tools:targetApi="lollipop"
        tools:ignore="HardcodedText"/>

    <Button
        android:id="@+id/historySpend"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:backgroundTint="#9AE677"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Spending History"
        android:textColor="@color/black"
        tools:targetApi="lollipop"
        tools:ignore="HardcodedText" />

</LinearLayout>