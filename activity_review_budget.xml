<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ReviewBudget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="arial"
        android:layout_gravity="center"
        android:text="REVIEW BUDGET"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />
    <TextView
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:text="$300.59"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="55sp"
        tools:ignore="HardcodedText"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Current Balance"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:fontFamily="arial"
        android:textColor="@color/white"
        tools:ignore="HardcodedText" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="140dp"
            android:layout_height="fill_parent"
            android:text="Budget Plan"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginRight="130dp"
            android:textSize="20sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <Button
            android:id="@+id/editButton"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:backgroundTint="#2C8601"
            android:text="Edit"
            tools:ignore="HardcodedText,RtlHardcoded"
            tools:targetApi="lollipop" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Food"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:text="$30.00"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                tools:ignore="HardcodedText,RtlHardcoded"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/budget_plan">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Resources"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:text="$30.00"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                tools:ignore="HardcodedText,RtlHardcoded"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/budget_plan">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Shelter"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:text="$30.00"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                tools:ignore="HardcodedText,RtlHardcoded"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/budget_plan">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Necessities"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:text="$30.00"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                tools:ignore="HardcodedText,RtlHardcoded"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/budget_plan">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Health"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:text="$30.00"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                tools:ignore="HardcodedText,RtlHardcoded"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/budget_plan">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Debt/Bills"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:text="$30.00"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                tools:ignore="HardcodedText,RtlHardcoded"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/budget_plan">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Emergency Funds"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:text="$30.00"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                tools:ignore="HardcodedText,RtlHardcoded"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/budget_plan">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Savings"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:text="$30.00"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                tools:ignore="HardcodedText,RtlHardcoded"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
